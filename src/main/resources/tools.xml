<?xml version="1.0" encoding="UTF-8"?>
<!-- Add custom tools to Velocity tools. The tools.xml file is included in 
	the classpath and Velocity finds it. -->
<tools>
	<toolbox scope="application">
		<tool key="config" class="com.wandrell.velocity.tool.SkinConfigUtil" />
		<tool key="htmlTool" class="com.wandrell.velocity.tool.HTMLUtil" />
		<tool key="siteTool" class="com.wandrell.velocity.tool.SiteUtil" />
	</toolbox>
</tools>
